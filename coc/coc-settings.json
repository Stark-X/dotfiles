{
  "java.home": "/usr/lib/jvm/java-11-openjdk-amd64/",
  "pylsp.builtin.installExtrasArgs": [
    "flake8",
    "mccabe",
    "pydocstyle",
    "pyflakes",
    "pylint",
    "rope"
  ],
  "pylsp.builtin.enableInstallPythonLspBlack": true,
  "groovy.java.home": "/usr/lib/jvm/java-11-openjdk-amd64/",
  "coc.preferences.formatOnSaveFiletypes": [
    "python",
    "vue",
    "javascript",
    "typescript",
    "css"
  ],
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "${env:HOME}/.local/bin/black",
  "snippets.ultisnips.directories": ["UltiSnips", "gosnippets/UltiSnips"],
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".git/"],
      "filetypes": ["go"]
    }
  },
  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "pyright.inlayHints.enable": true,
  "coc.preferences.extensionUpdateCheck": "daily"
}
