{
  "hover.floatConfig": {
    "border": true,
    "rounded": true
  },
  "signature.floatConfig": {
    "border": true,
    "rounded": true
  },
  "suggest.floatConfig": {
    "border": true,
    "rounded": true
  },
  "java.jdt.ls.java.home": "${env:HOME}/.sdkman/candidates/java/17.0.6-amzn",
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-1.8",
      "path": "${env:HOME}/.sdkman/candidates/java/8.0.302-open",
      "default": true
    },
    {
      "name": "JavaSE-11",
      "path": "${env:HOME}/.sdkman/candidates/java/11.0.12-open"
    },
    {
      "name": "JavaSE-17",
      "path": "${env:HOME}/.sdkman/candidates/java/17.0.6-amzn"
    }
  ],
  "groovy.java.home": "${env:HOME}/.sdkman/candidates/java/17.0.6-amzn",
  "[lua][python][vue][javascript][typescript][css]": {
    "coc.preferences.formatOnSave": true
  },
  "python.linting.enabled": false,
  "snippets.ultisnips.directories": ["UltiSnips", "gosnippets/UltiSnips"],
  "languageserver": {
    "ruff-lsp": {
      "command": "ruff-lsp",
      "filetypes": ["python"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".git/"],
      "filetypes": ["go"]
    }
  },
  "suggest.noselect": true,
  // "suggest.enablePreselect": false,
  "coc.preferences.extensionUpdateCheck": "daily",
  // gutters provide by lewis6991/gitsigns.nvim
  "git.enableGutters": false,
  "git.addGBlameToVirtualText": true,
  // make the ale and coc.nvim works togeter
  "diagnostic.displayByAle": true
}
